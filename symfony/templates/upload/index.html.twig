{% extends 'base.html.twig' %}

{% block title %}Hello UploadController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1>Suba un archivo </h1>

    <form method="post" enctype="multipart/form-data" action="{{ path('subir') }}">
        <div class="container">
            <div class="row g-0">
                <div class="col-sm-6 col-md-8">

                    <input class="form-control" type="file" name="formFile" id="formFile">
                </div>
                <div class="col-6 col-md-4">
                    <select class="form-select" aria-label="Default select example" name="politica">
                        <option selected value="0">Por defecto</option>
                        {%for id, value in politicas%}
                            <option value={{id}}>{{value.Nombre}}</option>
                        {%endfor%}
                    </select>
                </div>
                <div class="col">
                    <button class="btn btn-primary" type="submit">
                        Subir
                    </button>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
